<!DOCTYPE html>
<html>
<head>
  <title>NkuProject</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" <% if @current_artist %>href="/artists"<%end%>>ShareArt</a>
      <div class="nav-collapse">
        <ul class="nav">          
          <% if @current_artist %>
          <li> <%= link_to "Hello, #{@current_artist.name}", artists_path %> </li>
          <li><%= link_to "Sign Out", destroy_session_path %></li>
          <li><%= link_to "My Art", artist_pieces_path(@current_artist) %></li>
          <li><%= link_to "View Pieces", pieces_path %></li>
          <% else %>
          <li><%= link_to "Sign Up", new_artist_path %></li>
          <li><%= link_to "Sign In", new_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
  
<% if flash[:error] -%>
  <p class='error'><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
  <p class='notice'><%=h flash[:notice] %></p>
<% end -%>
  
<%= yield %>

</body>
</html>
